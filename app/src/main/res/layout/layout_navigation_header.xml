<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_200"
    android:background="@color/smallRed">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/na_header_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/na_header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_6"
        android:text="@string/app_name"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/na_header_img" />

    <TextView
        android:id="@+id/na_header_sign_in"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@drawable/oval_shaped_na_header_drawable"
        android:gravity="center"
        android:padding="@dimen/dp_4"
        android:text="@string/sign_in_txt"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/na_header_name"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>